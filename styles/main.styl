@import url("//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")

body
    margin: 0;
    min-width: 340px;
    min-height: 540px;
    font-family: arial;

.s-chat
    position: absolute;
    max-width: 300px;
    height: 500px;
    margin: auto;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    background: #fff;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
    display: flex;
    flex-direction: column;

    .s-header
        line-height: 56px;
        color: #fff;
        font-weight: bold;

    .s-content
        height: 396px;
        overflow: hidden;

        .s-messages
            max-height: 396px;
            overflow: auto;
            padding: 0 10px;

            .s-message
                padding: 5px 0;
                position: relative;

                .s-editing
                    background-color: #f1f1f1;
                    padding: 5px 15px;

                    form
                        display: block;
                        position: relative;

                        &>div
                            max-width: 100%;

                .s-avatar
                    float: left;
                    width: 50px;
                    line-height: 50px;
                    text-align: center;
                    background-color: #ccc;
                    border-radius: 50%;

                    .fa
                        font-size: 26px;
                        line-height: 48px;
                        vertical-align: top;

                .s-text
                    background-color: #f1f1f1;
                    padding: 17px 15px;
                    font-size: 12px;
                    line-height: 18px;
                    position: relative;
                    margin-left: 70px;
                    word-wrap: break-word;

                    &:before
                        content: '';
                        position: absolute;
                        width: 0;
                        height: 0;
                        border-style: solid;
                        border-width: 10px 15px 10px 0;
                        border-color: transparent #f1f1f1 transparent transparent;
                        top: 15px;
                        left: -15px;

                .s-date
                    padding-top: 3px;
                    text-align: right;
                    color: #ccc;
                    font-size: 12px;
                    line-height: 14px;
                    clear: both;

                .s-toolbar
                    position: absolute;
                    right: -2px;
                    top: 2px;
                    background: #eee;
                    box-shadow: 0px 0px 3px rgba(0,0,0,0.2);
                    display: none;
                    padding: 5px 0px;

                    a
                        display: inline-block;
                        vertical-align: top;
                        margin: 0 5px;
                        color: #000;
                        text-decoration: none;
                        width: 22px;
                        text-align: center;

                        &:hover
                            color: #555;

                &:hover
                    .s-toolbar
                        display: block;

    .s-footer
        border-top: 1px solid #e0e0e0;
